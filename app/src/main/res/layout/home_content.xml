    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo_alumni2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.skripsi.semmi.restget3.Font.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, "
                android:id="@+id/textView3"
                app:typeface="robotoMediumItalic" />

        </LinearLayout>


        <com.skripsi.semmi.restget3.Font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angkatan alumni"
            android:id="@+id/textView6"
            app:typeface="robotoLight"
            />

        <com.skripsi.semmi.restget3.Font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurusan"
            android:id="@+id/textView7"
            app:typeface="robotoLight"/>

        <com.skripsi.semmi.restget3.Font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/textView8"
            app:typeface="robotoLight"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_below="@+id/userLogin"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Around Me"
                android:textColor="#FFFFFF"
                android:id="@+id/aroundme"
                android:background="@color/colorPrimaryDarkHome"/>

            <Button
                android:layout_below="@+id/userLogin"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Career"
                android:id="@+id/careerButton"
                android:textColor="#FFFFFF"
                android:background="@color/light_red"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Trading"
                android:textColor="#FFFFFF"
                android:id="@+id/trading"
                android:background="#ffba0b"
                android:layout_below="@+id/careerButton"
                android:layout_toRightOf="@+id/careerButton"
                android:layout_toEndOf="@+id/careerButton" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusLogin"
            android:layout_above="@+id/career"
            android:layout_toRightOf="@+id/userLogin"
            android:layout_toEndOf="@+id/userLogin" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Message"
            android:id="@+id/allUserButton"
            android:layout_alignBottom="@+id/dummybutton"
            android:layout_toRightOf="@+id/userLogin"
            android:layout_toEndOf="@+id/userLogin"
            android:layout_gravity="center"
            android:background="#2566d5"
            android:textColor="#ffffff"
            android:layout_margin="10dp" />

    </LinearLayout>

</LinearLayout>