        <Button
            android:layout_below="@+id/userLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Around Me"
            android:textColor="#FFFFFF"
            android:id="@+id/aroundme"
            android:background="#bed81d61"
            android:drawableTop="@drawable/ic_aroundme"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_below="@+id/userLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Vacancy"
            android:id="@+id/careerButton"
            android:textColor="#FFFFFF"
            android:background="#be8c0ad7"
            android:drawableTop="@drawable/ic_career2_white"
            android:textSize="12sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trading"
            android:textColor="#FFFFFF"
            android:id="@+id/trading"
            android:background="#befdc600"
            android:layout_below="@+id/careerButton"
            android:layout_toRightOf="@+id/careerButton"
            android:layout_toEndOf="@+id/careerButton"
            android:drawableTop="@drawable/ic_trading_white"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/allUserButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#be0ab6dd"
            android:drawableTop="@drawable/ic_pesan1"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:text="All Message"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusLogin"
            android:layout_above="@+id/career"
            android:layout_toRightOf="@+id/userLogin"
            android:layout_toEndOf="@+id/userLogin" />

    </LinearLayout>

</LinearLayout>