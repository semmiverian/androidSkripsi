<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warna_dasar</item>
        <item name="colorPrimaryDark">@color/warna_dasar</item>
        <item name="colorAccent">@color/warna_dasar</item>

    </style>
    <!--Style buat tampilan register-->
    <style name="RegisterTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warna_dasar</item>
        <item name="colorPrimaryDark">@color/warna_dasar</item>
        <item name="colorAccent">@color/warna_dasar</item>
    </style>

    <!--Style buat tampilan home-->
    <style name="HomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warna_dasar</item>
        <item name="colorPrimaryDark">@color/warna_dasar</item>
        <item name="colorAccent">@color/warna_dasar</item>
    </style>

    <!--Style buat splash screen-->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- Style buat Google Card di Product -->
    <style name="GoogleCard" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/warna_dasar</item>
        <item name="colorPrimaryDark">@color/warna_dasar</item>
        <item name="colorAccent">@color/warna_dasar</item>
        <item name="android:windowBackground">@color/grey_300</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/warna_dasar</item>
        <item name="colorPrimaryDark">@color/warna_dasar</item>
        <item name="colorAccent">@color/blue_grey_300</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
